html
body
	margin 0
	padding 0
	background-color rgb(0, 61, 166)

.header_block
	position absolute
	top 20px
	width 100%
	z-index 9999
	.logo
		display block
		width 100%
		max-width 500px
		margin 0 auto
		cursor pointer

.bg_block
	position absolute
	top 250px; left 250px; right 250px; bottom 250px
	margin auto
	background-position center
	background-repeat no-repeat
	background-size contain
	cursor pointer
	&.blur
		cursor default
		filter: blur(15px)

.content_block
	display none
	top 250px
	font 14pt/16pt 'Arial'
	max-width 600px
	margin 250px auto
	color white
	&.show
		display block

.footer_block
	position absolute
	bottom 40px
	text-align center
	width 100%
	a
		filter: invert(100%)
		margin-right 25px
		display inline-block
		img
			width 25px
		&:last-child
			margin-right 0