@media screen and (max-height: 800px) {
	.footer_block {
		bottom 35px!important
	}

	.content_block {
		font 20pt/22pt 'Arial Bold'!important
		font-family Arial-BoldMT!important
	}

	.content_block p {
		margin-bottom 60px!important
	}

	.bg_block {
		top 15%!important
		left 15%!important
		right 15%!important
		bottom 15%!important
		max-width 300px!important
		max-height 300px!important
	}
}

@keyframes spinner {
	from {
		transform: rotateY(0deg);
	}
	to {
		transform: rotateY(-360deg);
	}
}

html
body
	margin 0
	padding 0
	background-color rgb(0, 61, 166)

.header_block
	width 100%
	z-index 0
	padding-left 20px
	padding-right 20px
	box-sizing border-box
	position fixed
	.logo
		display block
		width 100%
		max-width 500px
		margin 0 auto
		transition .2s linear
		&.active
			filter: blur(3px)

.bg_block
	position fixed
	top 25%; left 25%; right 25%; bottom 25%
	margin auto
	cursor pointer
	max-width 600px
	max-height 600px
	perspective 1000
	.bg_pattern
		width 100%
		height 100%
		position absolute
		background-position center
		background-repeat no-repeat
		background-size contain
		animation-name spinner
		animation-timing-function linear
		animation-iteration-count infinite
		animation-duration 3.9s
		transform-style preserve-3d
	&.blur
		cursor default
		filter: blur(15px)

.content_block
	color white
	display none
	font 40pt/42pt 'Arial Bold'
	text-align center
	position relative
	width 100%
	z-index 9999
	max-width 720px
	margin 0 auto
	padding-top 80px
	padding-left 20px
	padding-right 20px
	box-sizing border-box
	p
		margin 0
		padding 0
		margin-bottom 80px
	&.show
		display block

.footer_block
	position fixed
	z-index 0
	bottom 55px
	text-align center
	width 100%
	&.scroll a
		filter: blur(1px) invert(100%)
	a
		margin-right 25px
		display inline-block
		transition .2s linear
		filter: blur(0px) invert(100%)
		&:hover
			transition .2s linear
			filter: blur(1px) invert(100%)
		img
			width 25px
		&:last-child
			margin-right 0