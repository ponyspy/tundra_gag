@media screen and (max-width: 800px) {
	.footer_block {
		bottom 35px!important
	}

	.content_block {
		padding-top 120px!important
		padding-bottom 100px!important
	}

	.col_inner {
		margin-left 0!important
	}

	.column {
		width 100%!important
		max-width none!important
		padding-left 0!important
		margin-bottom 20px
	}

	.column:last-child {
		margin-bottom 0!important
	}

	.section_title {
		font-size 28pt!important
		line-height 30pt!important
	}

	.section_desc br {
		content: ' '
	}

	.section_desc br:after {
		content: ' '
	}

	.bg_block {
		top 15%!important
		left 15%!important
		right 15%!important
		bottom 15%!important
		max-width 300px!important
		max-height 300px!important
	}
}

@keyframes spinner {
	from {
		transform: rotateY(0deg);
	}
	to {
		transform: rotateY(-360deg);
	}
}

html
body
	margin 0
	padding 0
	background-color rgb(0, 61, 166)

.header_block
	width 100%
	z-index 0
	padding-left 20px
	padding-right 20px
	box-sizing border-box
	position fixed
	.logo
		display block
		width 100%
		max-width 500px
		margin 0 auto
		transition .2s linear
		&.active
			filter: blur(3px)

.bg_block
	position fixed
	top 25%; left 25%; right 25%; bottom 25%
	margin auto
	cursor pointer
	max-width 600px
	max-height 600px
	perspective 1000
	.bg_pattern
		width 100%
		height 100%
		position absolute
		background-position center
		background-repeat no-repeat
		background-size contain
		animation-name spinner
		animation-timing-function linear
		animation-iteration-count infinite
		animation-duration 3.9s
		transform-style preserve-3d
	&.blur
		cursor default
		filter: blur(15px)

.content_block
	color white
	display none
	font 30pt/36pt 'AB'
	position relative
	width 100%
	z-index 9999
	max-width 760px
	margin 0 auto
	padding-top 180px // 80px
	padding-bottom 140px // 80px
	padding-left 20px
	padding-right 20px
	box-sizing border-box
	&.show
		display block
	.content_section
		margin-bottom 80px
		.invert
			-webkit-text-fill-color: transparent;
			-webkit-text-stroke-width: 1px;
			-webkit-text-stroke-color: white;
		.section_title
			margin-bottom 40px
			text-align center
			font 40pt/46pt 'DinPro BI'
			font-style: italic;
		.section_columns
			margin-bottom 40px
			overflow hidden
			.col_inner
				margin-left -20px
				font-size 0
			.column
				width 50%
				max-width 370px
				display inline-block
				vertical-align top
				padding-left 20px
				box-sizing border-box
				font 16pt/18pt 'DinPro R'
		.section_desc
			font 10pt/12pt 'DinPro R'
			text-align center
	.logo
		display block
		max-width 120px
		margin 0 auto
		cursor pointer
		transition .2s linear
		&:hover
			transition .2s linear
			filter: blur(3px)

.footer_block
	position fixed
	z-index 0
	bottom 55px
	text-align center
	width 100%
	&.scroll a
		filter: blur(1px) invert(100%)
	a
		margin-right 25px
		display inline-block
		transition .2s linear
		filter: blur(0px) invert(100%)
		&:hover
			transition .2s linear
			filter: blur(1px) invert(100%)
		img
			width 25px
		&:last-child
			margin-right 0