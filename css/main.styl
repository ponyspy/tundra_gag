@media screen and (max-height: 800px) {
	.footer_block {
		bottom 35px!important
	}

	.content_block {
		font 20pt/22pt 'Arial Bold'!important
		font-family Arial-BoldMT!important
	}

	.content_block p {
		margin-bottom 60px!important
	}

	.bg_block {
		top 5%!important
		left 5%!important
		right 5%!important
		bottom 5%!important
		max-width 300px!important
		max-height 300px!important
	}
}

html
body
	margin 0
	padding 0
	background-color rgb(0, 61, 166)

.header_block
	width 100%
	z-index 9999
	padding-left 20px
	padding-right 20px
	box-sizing border-box
	.logo
		display block
		width 100%
		max-width 500px
		margin 0 auto
		transition .2s linear
		&.active
			filter: blur(0px)
			cursor default
			&:hover
				cursor pointer
				transition .2s linear
				filter: blur(3px)

.bg_block
	position fixed
	top 25%; left 25%; right 25%; bottom 25%
	margin auto
	background-position center
	background-repeat no-repeat
	background-size contain
	cursor pointer
	max-width 600px
	max-height 600px
	&.blur
		cursor default
		filter: blur(15px)

.content_block
	position relative
	z-index 99999
	color white
	display none
	font 40pt/42pt 'Arial Bold'
	max-width 720px
	// hyphens auto
	text-align center
	margin 0 auto
	margin-top 40px
	padding-left 20px
	padding-right 20px
	box-sizing border-box
	p
		margin 0
		padding 0
		margin-bottom 80px
	&.show
		display block

.footer_block
	position fixed
	bottom 55px
	text-align center
	width 100%
	&.scroll
		padding-top 80px
		position relative
	a
		margin-right 25px
		display inline-block
		transition .2s linear
		filter: blur(0px) invert(100%)
		&:hover
			transition .2s linear
			filter: blur(1px) invert(100%)
		img
			width 25px
		&:last-child
			margin-right 0